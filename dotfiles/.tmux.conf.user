set-option -g default-command "bash $HOME/.yadr_config/bin/safe-reattach-to-user-namespace -l $SHELL"

# Setup 'v' to begin selection as in Vim
bind-key -t vi-copy v begin-selection
bind-key -t vi-copy y copy-pipe "bash $HOME/.yadr_config/bin/safe-reattach-to-user-namespace pbcopy"

# Update default binding of `Enter` to also use copy-pipe
unbind -t vi-copy Enter
bind-key -t vi-copy Enter copy-pipe "bash $HOME/.yadr_config/bin/safe-reattach-to-user-namespace pbcopy"

# Status bar
if-shell "[ -f ~/.tmux.conf.user.status-bar ]" 'source ~/.tmux.conf.user.status-bar'

# Set prefix to Ctrl-Space
unbind C-b
set -g prefix C-a
bind a send-prefix
